<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_inherited_account_move_send_wizard_form" model="ir.ui.view">
        <field name="name">account.move.send.wizard.form.inherit.cc.bcc</field>
        <field name="model">account.move.send.wizard</field>
        <field name="inherit_id" ref="account.account_move_send_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[3]/group[1]/div[1]" position="after">
                <field name="cc_email_partner_ids" widget="many2many_tags_email"
                       placeholder="Cc recipients" options="{'no_quick_create': True}"
                       context="{'show_email': True, 'form_view_ref': 'base.view_partner_simple_form'}"/>

            </xpath>
            <xpath expr="//field[@name='mail_partner_ids']" position="after">
                <field name="cc_email_partner_ids" invisible="1"/>
                <field name="bcc_email_partner_ids" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>