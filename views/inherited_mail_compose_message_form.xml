<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_mail_compose_message_form_inherit_cc_bcc" model="ir.ui.view">
        <field name="name">mail.compose.message.form.inherit.cc.bcc</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subject']" position="before">
                <field name="cc_email_partner_ids"
                       widget="many2many_tags_email"
                       placeholder="Cc Recipients"
                       options="{'no_quick_create': True}"
                       context="{'show_email': True, 'form_view_ref': 'base.view_partner_simple_form'}"/>
            </xpath>
        </field>
    </record>
</odoo>
