<odoo>
    <record id="view_res_config_settings_cc" model="ir.ui.view">
        <field name="name">res.config.setting.cc.input</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']" position="after">

                <div class="mt16" id="custom_cc_settings_block">
                    <block title="Email CC">
                        <setting id="enable_custom_partner_setting"
                                 string="Enable Cc recipient"
                                 help="Enable a partner to be used as a default CC recipient.">
                            <div class="content-group">
                                <div class="row">
                                    <!-- Boolean Field -->
                                    <div class="col-lg-12">
                                        <field name="enable_custom_partner"/>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    <!-- Partner Field -->
                                    <div class="col-lg-12">
                                        <label for="custom_partner_ids" string="Enter Cc recipient(s)"/>
                                        <br/>
                                        <field name="custom_partner_ids"
                                               widget="many2many_tags"
                                               readonly="not enable_custom_partner"/>
                                    </div>
                                </div>
                            </div>
                        </setting>
                    </block>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
