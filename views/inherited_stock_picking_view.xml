<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form_inherit_cc_stage" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.cc.stage</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_validate_email_wizard"
                        type="object"
                        string="Add CC Recipient(s)"
                        class="btn-secondary"
                        invisible="state not in ['draft', 'confirmed', 'waiting', 'assigned']"/>
            </xpath>
        </field>
    </record>
</odoo>